<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.CrearTicketController"
            prefWidth="600.0" prefHeight="400.0">

    <children>
        <VBox spacing="10.0" layoutX="50.0" layoutY="40.0" prefWidth="500.0">
            <children>

                <Label text="Crear Nuevo Ticket" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

                <Label text="Título del ticket:" />
                <TextField fx:id="tituloField" promptText="Ingrese el título del ticket" />

                <Label text="Descripción:" />
                <TextArea fx:id="descripcionArea" promptText="Describa el problema" prefRowCount="5" wrapText="true" />

                <HBox spacing="10.0">
                    <children>
                        <Button text="Guardar Ticket" onAction="#guardarTicket" />
                        <Button text="Volver al menú" onAction="#volverAlMenu" />
                    </children>
                </HBox>
            </children>
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
        </VBox>
    </children>
</AnchorPane>
